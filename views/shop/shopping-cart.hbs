{{# if this.products }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <ul class="list-group">
      {{#each products}}
     <li class="list-group-item">
       <span class="badge badge-success">{{this.qty}}</span>
       <strong>{{this.item.name}}</strong>
       <span class="label label-success">${{this.price}}</span>
       <div class="btn-group">
         <div class="dropdown">
             <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
               Action
             </button>
             <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
               <a class="dropdown-item" href="/reduce/{{this.item._id}}">Remove-by-1</a>
               <a class="dropdown-item" href="/remove/{{this.item._id}}">Remove-all</a>

             </div>
           </div>
       </div>
     </li>
     {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <strong> Total Amount: ${{totalPrice}}</strong>
  </div>
</div>
<hr>
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <a href="/checkout" class="btn btn-success" type="button"> Checkout</a>
  </div>
</div>
  {{ else }}
<div class="row">
  <div class="col-sm-6 col-md-6 col-md-offset-3 col-sm-offset-3">
    <h1>No Items in the Shopping cart</h1>
  </div>
</div>
{{/if}}

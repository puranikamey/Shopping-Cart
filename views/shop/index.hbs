{{# each products }}

<div class="row">
  {{#each this}}
  <div class="col-sm-6 col-md-4">
      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="{{this.imagePath}}" alt="Card image cap" class="img-responsive" >
        <div class="card-body">
          <h5 class="card-title">{{this.name}}</h5>
          <p class="card-text">{{this.description}}</p>
          <p class="card-text">Category No: {{this.categoryNo}}</p>
          <p class="card-text">Category Name: {{this.categoryName}}</p>
          <div class="price pull-left">${{this.price}}</div>
          <a href="/add-to-cart/{{this._id}}" class="btn btn-success pull-right" >Add to cart</a>
        </div>
      </div>
  </div>

{{/each}}
<hr>
</div>
{{/each}}
